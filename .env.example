# The Homies App - Environment Configuration

# Server
PORT=3000
NODE_ENV=development
APP_URL=https://the-homies-app.glitch.me

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/homies_chat?schema=public

# CORS
CORS_ORIGIN=http://localhost:3000

# Email (for password reset, etc.)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
SMTP_FROM=Homies Chat <noreply@example.com>

# Supabase - For authentication and database
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_anon_key

# MEGA Storage - For secure file storage
MEGA_EMAIL=your_mega_email
MEGA_PASSWORD=your_mega_password

# Proton Mail Configuration - For verification emails
EMAIL_HOST=smtp.protonmail.ch
EMAIL_PORT=587
EMAIL_USER=TheHomiesChatBot@proton.me
EMAIL_PASS=your_app_specific_password
EMAIL_FROM=TheHomiesChatBot@proton.me
EMAIL_SECURE=true

# SendGrid - Alternative email service (recommended)
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=no-reply@homiesapp.com

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key_min_32_chars
NEXTAUTH_SECRET_INTERNAL=your_nextauth_secret_key_min_32_chars

# OAuth Provider Configuration (Example for GitHub)
# GITHUB_ID=your_github_client_id
# GITHUB_SECRET=your_github_client_secret

# OAuth Provider Configuration (Example for Discord)
# DISCORD_CLIENT_ID=your_discord_client_id
# DISCORD_CLIENT_SECRET=your_discord_client_secret

# OAuth Provider Configuration (Example for Google)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# Security - For encryption
JWT_SECRET=your_jwt_secret_key_min_32_chars
ENCRYPTION_KEY=your_encryption_key_min_32_chars
