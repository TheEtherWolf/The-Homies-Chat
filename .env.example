# The Homies App - Environment Configuration

# Server
PORT=3000
APP_URL=https://the-homies-app.glitch.me

# Supabase - For authentication and database
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_anon_key

# MEGA Storage - For secure file storage
MEGA_EMAIL=your_mega_email
MEGA_PASSWORD=your_mega_password

# Proton Mail Configuration - For verification emails
EMAIL_HOST=smtp.protonmail.ch
EMAIL_PORT=587
EMAIL_USER=TheHomiesChatBot@proton.me
EMAIL_PASS=your_app_specific_password
EMAIL_FROM=TheHomiesChatBot@proton.me
EMAIL_SECURE=true

# SendGrid - Alternative email service (recommended)
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=no-reply@homiesapp.com

# NextAuth Configuration
NEXTAUTH_URL=https://the-homies-app.glitch.me
NEXTAUTH_SECRET=your_nextauth_secret_key_min_32_chars

# Security - For encryption
JWT_SECRET=your_jwt_secret_key_min_32_chars
ENCRYPTION_KEY=your_encryption_key_min_32_chars
